<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false">
		<layer-list>
			<!-- SHADOW -->
			<item>
				<shape>
					<solid android:color="#792D28"/>
					<!-- alttan gÃ¶lge -->
					<corners android:radius="10dp"/>
				</shape>
			</item>
			<item
				android:bottom="3dp"
				>
				<shape>
					<padding android:bottom="5dp"/>
					<solid android:color="#F04949"/>
					<corners
						android:radius="10dp"/>
					<padding
						android:left="10dp"
						android:top="10dp"
						android:right="5dp"
						android:bottom="10dp"/>
				</shape>
			</item>
		</layer-list>
	</item>

	<item android:state_pressed="true">
		<layer-list>
			<!-- SHADOW -->
			<item>
				<shape>
					<solid android:color="#792D28"/>
					<corners android:radius="12dp"/>

				</shape>
			</item>
			<!-- BUTTON -->
			<item android:bottom="1dp">
				<shape>
					<padding android:bottom="5dp"/>
					<solid android:color="#F04949"/>
					<corners
						android:radius="10dp"/>
					<padding
						android:left="10dp"
						android:top="10dp"
						android:right="5dp"
						android:bottom="10dp"/>
				</shape>
			</item>
		</layer-list>
	</item>


</selector>