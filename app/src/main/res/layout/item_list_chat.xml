<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="5dp"
	>

	<ImageView
		android:id="@+id/avatarUserItemImg"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginTop="5dp"
		android:layout_marginStart="5dp"
		android:background="@drawable/ic_user"
		/>
	<TextView
		android:id="@+id/nameUserItemTx"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="name user"
		android:layout_toRightOf="@id/avatarUserItemImg"
		android:layout_marginStart="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:textSize="15sp"
		android:textColor="@color/colorBlack"
		/>
	<TextView
		android:id="@+id/contentItemTx"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/avatarUserItemImg"
		android:layout_below="@id/nameUserItemTx"
		android:layout_marginStart="10dp"
		android:layout_marginTop="5dp"
		android:textSize="10sp"
		android:singleLine="true"
		android:layout_marginBottom="5dp"
		/>
	<ImageView
		android:id="@+id/iconNewMessItemImg"
		android:layout_width="10dp"
		android:layout_height="10dp"
		android:layout_alignParentEnd="true"
		android:background="@drawable/ic_lens_blue_24dp"
		android:layout_marginEnd="30dp"
		android:layout_marginTop="10dp"
		android:visibility="invisible"
		/>
	<TextView
		android:id="@+id/timeMessTx"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="10dp"
		android:textSize="8sp"
		android:layout_marginTop="10dp"
		android:layout_below="@+id/iconNewMessItemImg"
		android:visibility="visible"
		android:layout_alignParentEnd="true"
		/>

</RelativeLayout>